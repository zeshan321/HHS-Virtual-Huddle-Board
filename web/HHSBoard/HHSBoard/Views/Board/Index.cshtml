@model HHSBoard.Data.Board
@inject HHSBoard.Data.ApplicationDbContext applicationDbContext
@{
    ViewData["Title"] = "Index";
}

<style>
    #hhsFooter {
        display: none;
    }

    .popover {
        min-width: 400px;
    }
</style>

<script src="~/js/board.js"></script>

<button id="navLeft" class="btn btn-primary btn-circle btn-lg btn-navigation-left"><i class="fa fa-arrow-left"></i></button>
<button id="navRight" class="btn btn-primary btn-circle btn-lg btn-navigation-right"><i class="fa fa-arrow-right"></i></button>

@if ((int)ViewBag.TableType == 0)
{
    var purpose = applicationDbContext.Purpose.SingleOrDefault(p => p.BoardID == Model.ID);
    @await Html.PartialAsync("_Purpose", purpose);
}
else if ((int)ViewBag.TableType == 1)
{
    @await Html.PartialAsync("_CelebrationTable");
}
else
{
    <h1>Error: No table type set.</h1>
}
