<table id="table"
       data-pagination="true"
       data-show-export="true"
       data-search="true"
       data-mobile-responsive="true"
       data-check-on-init="true"
       data-unique-id="id"
       data-id-field="id"
       data-editable-url="/Board/UpdateField?TableType=3&BoardID=@ViewBag.BoardID"
       data-show-toggle="true"
       data-show-refresh="true"
       data-auto-refresh="true"
       data-show-fullscreen="true"
       data-side-pagination="server"
       data-maintain-selected="true"
       data-url="/Board/GetTableData?TableType=3&BoardID=@ViewBag.BoardID">
    <thead>
        <tr>
            <th data-field="state" class="fit" data-checkbox="true"></th>
            <th data-field="id" class="fit" data-visible="false">ID</th>
            <th data-field="legend" class="fit" data-editable="true" data-editable-type="textarea" data-escape="true" data-editable-escape="false" data-editable-onblur="ignore">Legend</th>
            <th data-field="personIdentifyingOpportunity" class="fit" data-editable="true" data-editable-type="textarea" data-escape="true" data-editable-escape="false" data-editable-onblur="ignore">Name of Person Identitfying Opportunity</th>
            <th data-field="dateIdentified" class="fit" data-editable="true" data-editable-type="combodate" data-editable-template="D MMM YYYY  HH:mm" data-editable-format="YYYY-MM-DD HH:mm" data-editable-viewformat="MMM D, YYYY, HH:mm">Date</th>
            <th data-field="problem" class="fit" data-editable="true" data-editable-type="textarea" data-escape="true" data-editable-escape="false" data-editable-onblur="ignore">Problem</th>
            <th data-field="staffWorkingOnOpportunity" class="fit" data-editable="true" data-editable-type="textarea" data-escape="true" data-editable-escape="false" data-editable-onblur="ignore">Staff Working On Opportunity</th>
            <th data-field="strategicGoals" class="fit" data-editable="true" data-editable-type="checklist" data-editable-source="[{value: 0, text: 'Patients'}, {value: 1, text: 'People'}, {value: 2, text: 'Sustainability'}, {value: 3, text: 'Research, Innovation & Learning'}]">HHS Strategic Goals</th>
            <th data-field="isPtFamilyInvovlmentOpportunity" class="fit" data-editable="true" data-editable-type="select" data-editable-source="[{value: 0, text: 'No'}, {value: 1, text: 'Yes'}]">Pt/Family Invovlment Opportunity?</th>
            <th data-field="eightWs" class="fit" data-editable="true" data-editable-type="textarea" data-escape="true" data-editable-escape="false" data-editable-onblur="ignore">8 W's</th>
            <th data-field="pickChart" class="fit" data-editable="true" data-editable-type="select" data-escape="true" data-editable-source="[{value: 0, text: 'Implement'}, {value: 1, text: 'Challenge'}, {value: 2, text: 'Possible'}, {value: 3, text: 'Kibosh'}]">Pick Chart</th>
            <th data-field="justDoIt" class="fit" data-editable="true" data-editable-type="textarea" data-escape="true" data-editable-escape="false" data-editable-onblur="ignore">Just Do It/ PDSA / Work Waiting</th>
            <th data-field="operate" class="fit" data-formatter="operateFormatter" data-events="operateEvents"></th>
        </tr>
    </thead>
</table>


<div class="modal fade" id="deleteModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Are you sure you want to delete?</h4>
            </div>
            <div class="modal-body">
                <p id="deleteModalText" style="text-align: center;">Some text in the modal.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button id="confirmDelete" type="button" class="btn btn-danger">Delete</button>
            </div>
        </div>
    </div>
</div>


