@model HHSBoard.Models.HomeViewModels.HomeIndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<script type="text/javascript">
    $(function () {
        $("#createBoardForm").submit(function (e) {
            var boardName = $("#createBoardName").val();
            var unitID = $('#createBoardUnits').find(":selected").val();

            $.ajax({
                type: "POST",
                url: "/Home/CreateBoard",
                data: { Name: boardName, UnitID: unitID },
                dataType: "json",
                success: function (data) {
                    $.notify({
                        message: 'Successfully created board.'
                    }, {
                            type: 'success'
                        });

                    location.reload();
                },
                error: function (data) {
                    var response = data.responseJSON;

                    $.notify({
                        message: response
                    }, {
                            type: 'danger'
                        });
                }
            });
            return false;
        });


        $("#deleteBoardForm").submit(function (e) {
            var boardID = $("#deleteBoardID").val();

            $.ajax({
                type: "POST",
                url: "/Home/DeleteBoard",
                data: { ID: boardID },
                dataType: "json",
                success: function (data) {
                    $.notify({
                        message: 'Successfully deleted board.'
                    }, {
                            type: 'success'
                        });

                    $("#" + boardID).remove();
                    $("#deleteBoardModal").modal("hide");
                },
                error: function (data) {
                    var response = data.responseJSON;

                    $.notify({
                        message: response
                    }, {
                            type: 'danger'
                        });
                }
            });
            return false;
        });

        $('#deleteBoardModal').on('show.bs.modal', function (e) {
            var BoardID = $(e.relatedTarget).data('boardid');
            var BoardName = $(e.relatedTarget).data('boardname');
            $(e.currentTarget).find('input[id="deleteBoardID"]').val(BoardID);
            $(e.currentTarget).find('h5[id="deleteBoardName"]').text(BoardName);
        });

        $("#boardSearch").keyup(function () {
            var search = $(this).val();

            $.ajax({
                type: "POST",
                url: "/Home/SearchBoards",
                data: { Search: search },
                dataType: "json",
                success: function (data) {
                    $(".row").empty();

                    if (data.boards.length > 0) {
                        for (var i = 0; i < data.boards.length; i++) {
                            var item = data.boards[i];
                            var id = item.id;
                            var name = item.name;
                            var unitName = item.unit.name;

                            $(".row").append(boardTemplate(@Model.IsAdmin,id, name, unitName));
                        }
                    } else {
                        $(".row").append('<h3 style="text-align: center;">No boards found matching your search query.</h3>');
                    }
                },
                error: function (data) {
                    $.notify({
                        message: "Unable to search for boards."
                    }, {
                            type: 'danger'
                        });
                }
            });
        });
    });

    function boardTemplate(admin, ID, name, unit) {
        if (admin) {
            return [
                '<div id="' + ID + '" class="col-sm-6 col-md-4">',
                '<div class="thumbnail">',
                '<div class="caption">',
                '<h3 class="board-name-text">' + name + '<br /><small>' + unit + '</small></h3>',
                '<p><a href="/Board?BoardID=' + ID + '" class="btn btn-primary" role="button" data-boardID="' + ID + '">View</a>',
                '<a href="/#deleteBoardModal" class="btn btn-danger" data-toggle="modal" role="button" value="" data-boardName="' + name + '" data-boardID="' + ID + '">Delete</a></p >',
                '</div>',
                '</div>',
                '</div>'
            ].join('');
        } else {
            return [
                '<div id="' + ID + '" class="col-sm-6 col-md-4">',
                '<div class="thumbnail">',
                '<div class="caption">',
                '<h3 class="board-name-text">' + name + '<br /><small>' + unit + '</small></h3>',
                '<p><a href="/Board?BoardID=' + ID + '" class="btn btn-primary" role="button" data-boardID="' + ID + '">View</a>',
                '</div>',
                '</div>',
                '</div>'
            ].join('');
        }
    }
</script>

<div class="page-header">
    <h1>Boards</h1>
</div>

<div class="form-group">
    <label for="inputlg">Search</label>
    <input class="form-control input-lg" id="boardSearch" type="text" placeholder="Enter search...">
</div>

<div class="row">
    @if (Model.Boards.Any())
    {
        foreach (var board in Model.Boards)
        {
            <script>
            $(".row").append(boardTemplate(@Model.IsAdmin.ToString().ToLower(),@board.ID, '@board.Name', '@board.Unit.Name'));
            </script>
        }
    }
    else
    {
        <h3 style="text-align: center;">You currently have no boards.</h3>
    }
</div>

<!-- New Board Modal -->
<div id="newBoardModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <form id="createBoardForm">

            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Create board</h4>
                </div>

                <div class="modal-body">
                    <div class="form-group">
                        <label for="createBoardName">Board name:</label>
                        <input type="text" class="form-control" id="createBoardName" required>
                    </div>
                    <div class="form-group">
                        <label for="createBoardUnits">Select unit:</label>
                        <select class="form-control" id="createBoardUnits" required>
                            <option></option>
                            @foreach (var unit in Model.Units)
                            {
                                <option value="@unit.ID">@unit.Name</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Delete Board Modal -->
<div id="deleteBoardModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <form id="deleteBoardForm">

            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Are you sure you want to delete this board?</h4>
                </div>

                <div class="modal-body">
                    <div class="form-group">
                        <h5 id="deleteBoardName" class="lead text-danger text-center"></h5>
                        <input type="hidden" class="form-control" id="deleteBoardID">
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Yes</button>
                </div>
            </div>
        </form>
    </div>
</div>

@if (Model.IsAdmin)
{
    <div class="fixed-action-btn horizontal" style="bottom: 45px; right: 24px;">
        <a class="btn-floating btn-large red" data-target="#newBoardModal" data-toggle="modal">
            <i class="fa fa-plus"></i>
        </a>
    </div>
}